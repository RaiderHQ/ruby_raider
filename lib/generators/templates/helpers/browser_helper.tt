# frozen_string_literal: true

require 'yaml'
require 'selenium-webdriver'
require 'watir'
require 'webdrivers'

module Raider
  module BrowserHelper
    class << self
      attr_reader :browser

      def new_browser(options = {})
        browser = YAML.load_file('config/config.yml')['browser'].to_sym
        @browser = Watir::Browser.new(browser, options: options)
      end
    end
  end
end