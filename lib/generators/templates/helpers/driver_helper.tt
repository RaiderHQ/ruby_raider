# frozen_string_literal: true

require_relative '../template'

class DriverHelperTemplate < Template
  def new_driver
    if automation == 'selenium'
        def new_driver
                @driver = Selenium::WebDriver.for :chrome
              end
    else
        def new_driver
                appium_file = File.join(Dir.pwd, 'appium.txt')
                caps = Appium.load_appium_txt(file: appium_file)
                @driver = Appium::Driver.new(caps)
              end
    end
  end

  def requirements
    case automation
    when 'selenium'
        require 'selenium-webdriver'
        require 'webdrivers'

    when 'watir'

        require 'watir'
        require 'webdrivers'
    else
      "require 'appium_lib'"
    end
  end

  def body
      #{requirements}

      module Raider
        module DriverHelper
          class << self
            attr_reader :driver

            #{new_driver}
          end
        end
      end
    RUBY
  end
end
