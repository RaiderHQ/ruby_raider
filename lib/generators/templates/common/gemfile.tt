source 'https://rubygems.org'

gem 'activesupport'
<% if mobile? %>
gem 'appium_lib'
gem 'appium_console'
<% end %>
<%- if cucumber? -%>
gem 'allure-cucumber', '~> 2.24.0'
<%- else -%>
gem 'allure-rspec', '~> 2.24.0'
gem 'allure-ruby-commons', '~> 2.24.0'
<%- end -%>
<%- if axe? -%>
gem 'axe-core-rspec'
gem 'axe-core-selenium'
<%- end -%>
<%- if visual? -%>
gem 'eyes_selenium', '~> 4.6', '>= 4.6.1'
gem 'eyes_universal', '~> 3.3', '>= 3.3.1'
<%- end -%>
<%- unless visual? -%>
gem 'parallel_split_test'
gem 'parallel_tests'
<%- end -%>
gem 'rake'
gem 'reek'
gem '<%= framework %>'
<%- if cucumber? -%>
gem 'rspec'
<%- end -%>
gem 'rubocop'
<%- if rspec? -%>
gem 'rubocop-rspec'
<%- end -%>
gem 'ruby_raider', '~> 1.0.0'
<%- if selenium_based? %>
gem 'selenium-webdriver'
<%- end -%>
<%- if watir? -%>
gem 'watir'
<%- end -%>
